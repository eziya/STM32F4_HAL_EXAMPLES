#include "main.h"
#include "stm32f4xx_hal.h"
#include "u8g2/u8g2.h"

extern SPI_HandleTypeDef hspi2;

uint8_t u8x8_stm32_gpio_and_delay(u8x8_t *u8x8, uint8_t msg, uint8_t arg_int, void *arg_ptr)
{
	/* HW SPI 를 사용하기 때문에 U8X8_MSG_DELAY_XXX 와 U8X8_MSG_GPIO_XXX 불필요한 코드는 제거 */
	switch(msg)
	{
	case U8X8_MSG_GPIO_AND_DELAY_INIT:
		/* 최초 1회 호출되는 코드로 초기화 시에 필요한 작업 수행 */
		break;
	case U8X8_MSG_GPIO_CS:
		/* SS(CS) GPIO 제어에 필요한 코드 추가 */
		HAL_GPIO_WritePin(OLED_CS_GPIO_Port, OLED_CS_Pin, arg_int);
		break;
	case U8X8_MSG_GPIO_DC:
		/* DC GPIO 제어에 필요한 코드 추가 */
		HAL_GPIO_WritePin(OLED_DC_GPIO_Port, OLED_DC_Pin, arg_int);
		break;
	case U8X8_MSG_GPIO_RESET:
		/* RST GPIO 제어에 필요한 코드 추가 */
		HAL_GPIO_WritePin(OLED_RST_GPIO_Port, OLED_RST_Pin, arg_int);
		break;
	}
	return 1;
}

uint8_t u8x8_byte_stm32_hw_spi(u8x8_t *u8x8, uint8_t msg, uint8_t arg_int, void *arg_ptr)
{
	switch(msg) {
	case U8X8_MSG_BYTE_SEND:
		/* 데이터 전송 코드 추가 */
		if(HAL_SPI_Transmit(&hspi2, arg_ptr, arg_int, HAL_MAX_DELAY) != HAL_OK) return 0;
		break;
	case U8X8_MSG_BYTE_INIT:
		/* 데이터 전송 초기화 시 필요 코드 추가 */
		break;
	case U8X8_MSG_BYTE_SET_DC:
		/* DC 설정 시, u8x8_stm32_gpio_and_delay 의 U8X8_MSG_GPIO_DC 케이스가 호출 */
		u8x8_gpio_SetDC(u8x8, arg_int);
		break;
	case U8X8_MSG_BYTE_START_TRANSFER:
		/* 데이터 전송 시작 시, u8x8_stm32_gpio_and_delay 의 U8X8_MSG_GPIO_CS 케이스가 호출 */
		u8x8_gpio_SetCS(u8x8, u8x8->display_info->chip_enable_level);
		HAL_Delay(1);
		break;
	case U8X8_MSG_BYTE_END_TRANSFER:
		HAL_Delay(1);
		/* 데이터 전송 시작 시, u8x8_stm32_gpio_and_delay 의 U8X8_MSG_GPIO_CS 케이스가 호출 */
		u8x8_gpio_SetCS(u8x8, u8x8->display_info->chip_disable_level);
		break;
	default:
		return 0;
	}
	return 1;
}
